<table class="table table-striped  table-hover" style="margin-top:20px;">
    <colgroup>
        <col width="5%" />
        <col width="10%" />
        <col width="5%" />
        <col width="5%" />
        {{#eventMeta}}
            <col width="5%" />
            <col width="5%" />
            <col width="5%" />
        {{/eventMeta}}
    </colgroup>
    <thead>
    <tr class="">
        <th colspan="4"></th>
        {{#eventMeta}}
            <th colspan="3" class="text-center">
                {{#trackViewName}}
                    {{trackViewName}}
                {{/trackViewName}}
                {{^trackViewName}}
                    {{trackName}}
                {{/trackViewName}}
            </th>
        {{/eventMeta}}
    </tr>
    <tr class="">
        <th class="text-center">Rank</th>
        <th class="text-center">Driver</th>
        <th class="text-center">Point</th>
        <th class="text-center">Ballast</th>
        {{#roundViewList}}
            <th class="text-center">
                {{round}}R Rank
            </th>
            <th class=" text-center">
                {{round}}R Point
            </th>
            <th class="text-center">
                {{round}}R Ballast
            </th>
        {{/roundViewList}}
    </tr>
    </thead>
    <tbody>
    {{#result}}
        <tr>
            <td class="text-center">{{finalRank}}</td>
            <td>
                {{#STEAM_AVATAR}}
                    <div style="float:left">
                        <img src="{{STEAM_AVATAR}}" class="rounded-circle" />
                    </div>
                {{/STEAM_AVATAR}}
                <div style="overflow:hidden;padding-left:10px">
                    {{FIRST_NAME}} {{LAST_NAME}}
                </div>
            </td>
            <td class="text-center">
                <b>{{SCORE}}</b>
            </td>
            <td class="text-center">
                <b style="color:red;">{{HANDICAP}}</b>
            </td>
            {{#roundList}}
                <td class="text-center">{{value}}</td>
            {{/roundList}}
        </tr>
    {{/result}}
    </tbody>
</table>