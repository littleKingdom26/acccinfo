{{>admin/layout/header}}
<body>
    <div id="wrap">
        <div class="inWrap">
            {{>admin/layout/lnb}}
            <div id="container">
                {{>admin/layout/topBar}}
                <div class="location">
                    <em class="home">HOME</em><i></i>
                    <em class="active">플레이어 관리</em>
                </div>
                <div class="content">
                    <div class="box">
                        <div class="inBox">
                            <form id="searchFrm" action="/admin/player/main" method="get">
                                <table class="formTable">
                                    <colgroup>
                                        <col width="150px" />
                                        <col width="100px" />
                                    </colgroup>
                                    <tbody>
                                        <tr>
                                            <th>드라이버 명</th>
                                            <td colspan="4"><input type="text" id="keyword" name="keyword" value="" class="textType" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="btnArea mt20">
                                    <a href="javascript:void(0)" id="btnSearch" class="btn btnBi btnBlue">검색</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="box">
                        <div class="inBox">
                            <table class="listTable mt10">
                                <colgroup>
                                    <col width="5%" />
                                    <col width="*" />
                                    <col width="150px" />
                                </colgroup>
                                <thead>
                                <tr>
                                    <th>No</th>
                                    <th>드라이버 명</th>
                                    <th>TT Score</th>
                                    <th>등록일</th>
                                </tr>
                                </thead>
                                <tbody >
                                {{#driverList}}
                                    <tr>
                                        <td>{{no}}</td>
                                        <td><a href="javascript:void(0);" class="driverDetail" data-playerid="{{playerId}}" >{{firstName}} {{lastName}}</a></td>
                                        <td>{{ttScore}}</td>
                                        <td>{{regDt}}</td>
                                    </tr>
                                {{/driverList}}
                                </tbody>
                            </table>
                            {{!--{data.page.paging}--}}
                        </div>
                    </div>
                </div>
            </div>
            {{>admin/layout/bodyFooter}}
        </div>
    </div>
    <div id="divLayer" class="layer event_write-pop">

    </div>
</body>
{{>admin/layout/footer}}
<script src="/js/adminPlayer.js"></script>
<script>
    $(function () {
        player.init();
    });

//    $('#divLayer').target.bPopup();
</script>