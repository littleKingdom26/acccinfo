{{>admin/layout/header}}
<body>
    <div id="wrap">
        <div class="inWrap">
            {{>admin/layout/lnb}}
            <div id="container">
                {{>admin/layout/topBar}}
                <div class="location">
                    <em class="home">HOME</em><i></i>
                    <em class="active">플레이어 관리</em>
                </div>
                <div class="content">
                    <div class="box">
                        <div class="inBox">
                            <form id="searchFrm" action="/" method="post">
                                <table class="formTable">
                                    <colgroup>
                                        <col width="150px" />
                                        <col width="100px" />
                                    </colgroup>
                                    <tbody>
                                        <tr>
                                            <th>드라이버 명</th>
                                            <td colspan="4"><input type="text" id="keyword" name="keyword" value="" class="textType" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="btnArea mt20">
                                    <a href="#" id="btnSearch" class="btn btnBi btnBlue">검색</a>
                                    <a href="#" id="btnClear" class="btn btnBi btnDefalt">초기화</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="box">
                        <div class="inBox">
                            <table class="listTable mt10">
                                <colgroup>
                                    <col width="5%" />
                                    <col width="*" />
                                    <col width="150px" />
                                </colgroup>
                                <thead>
                                <tr>
                                    <th>No</th>
                                    <th>드라이버 명</th>
                                    <th>TT Score</th>
                                </tr>
                                </thead>
                                <tbody >
                                    <tr>
                                        <td colspan="3">
                                            player 리스트 나올 예정
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            {{!--{data.page.paging}--}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{>admin/layout/bodyFooter}}
    </div>

</body>
{{>admin/layout/footer}}
<script src="/js/adminBoard.js"></script>
<script>
    $(function () {
        //board.init();
    });

    function paging(page) {
        $('#currentPage').val(page);
        $('#searchFrm').submit();
    }
</script>