{{>admin/layout/header}}
<body>
    <div id="wrap">
        <div class="inWrap">
            {{>admin/layout/lnb}}
            <div id="container">
                {{>admin/layout/topbar}}
                <div class="location">
                    <em class="home">HOME</em><i></i>
                    <em>게시판관리</em><i></i>
                    <em class="active">{{bbsName}}</em>
                </div>
                <div class="content">
                    <form id="searchFrm" action="/admin/board/{{search.nameSeq}}" method="post">
                        <input type="hidden" id="currentPage" name="currentPage" value="{{search.currentPage}}" />
                        <input type="hidden" id="nameSeq" name="nameSeq" value="{{search.nameSeq}}" />
                        <input type="hidden" id="keyword" name="keyword" value="{{search.keyword}}" />
                        <input type="hidden" id="schRegUserName" name="schRegUserName" value="{{search.schRegUserName}}" />
                    </form>

                    <div class="box">
                        <div class="inBox">
                            <form id="frm" action="/admin/board/update" method="post">
                                <input type="hidden" id="nameSeq" name="nameSeq" value="{{search.nameSeq}}" />
                                <input type="hidden" id="seq" name="seq" value="{{search.bbsSeq}}" />
                                <table class="formTable mt10">
                                    <colgroup>
                                        <col width="5%" />
                                        <col width="*" />
                                    </colgroup>
                                    <tbody>
                                        <tr>
                                            <td>제목</td>
                                            <td>
                                                <input type="text" class="textType" id="title" name="title" placeholder="제목을 입력하세요" value="{{data.bbsVO.title}}" />

                                            </td>
                                        </tr>
                                        <tr>
                                            <td>작성자</td>
                                            <td>
                                                {{data.bbsVO.regName}}
                                                <input type="hidden" id="regId" name="regId"  value="{{data.bbsVO.regId}}" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>내용</td>
                                            <td>
                                                <textarea class="form-control" id="content" name="content" placeholder="내용을 입력하세요" rows="10">{{data.bbsVO.content}}</textarea>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                            <div class="btnArea txtR">
                                <a href="javascript:void(0);" id="btn-update" class="btn btnBlue btnPopIns">수정</a>
                                <a href="javascript:void(0);" id="btn-delete" class="btn btnDefalt">삭제</a>
                                <a href="javascript:void(0);" id="btn-list" class="btn btnDefalt">목록</a>
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <div class="inBox">
                            <table class="listTable  mt10">
                                <colgroup>
                                    <col width="5%"/>
                                    <col width="*"/>
                                    <col width="5%"/>
                                </colgroup>
                                <tbody>
                                    {{#data.bbsVO.commentList}}
                                        <tr>
                                            <td>
                                                {{regId}}
                                            </td>
                                            <td>
                                                {{comment}}
                                            </td>
                                            <td>
                                                <a href="javascript:void(0);" class="btn btnDefalt commentDelBtn" data-seq="{{seq}}">삭제</a>
                                            </td>
                                        </tr>
                                    {{/data.bbsVO.commentList}}
                                    {{^data.bbsVO.commentList}}
                                        <tr>
                                            <td colspan="3" class="">
                                                댓글이 없습니다.
                                            </td>
                                        </tr>
                                    {{/data.bbsVO.commentList}}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
            {{>admin/layout/bodyFooter}}
        </div>
    </div>

</body>
{{>admin/layout/footer}}
<script src="/js/adminBoard.js"></script>
<script>
    $(function () {
        board.view();
    });


</script>