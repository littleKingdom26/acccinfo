{{>admin/layout/header}}
<body>
    <div id="wrap">
        <div class="inWrap">
            {{>admin/layout/lnb}}
            <div id="container">
                {{>admin/layout/topBar}}
                <div class="location">
                    <em class="home">HOME</em><i></i>
                    <em>게시판관리</em><i></i>
                    <em class="active">{{bbsName}}</em>
                </div>
                <div class="content">
                    <form id="searchFrm" action="/admin/board/{{search.nameSeq}}" method="post">
                        <input type="hidden" id="currentPage" name="currentPage" value="{{search.currentPage}}" />
                        <input type="hidden" id="nameSeq" name="nameSeq" value="{{search.nameSeq}}" />
                        <input type="hidden" id="keyword" name="keyword" value="{{search.keyword}}" />
                        <input type="hidden" id="schRegUserName" name="schRegUserName" value="{{search.schRegUserName}}" />
                    </form>

                    <div class="box">
                        <div class="inBox">
                            <form id="frm" action="/admin/board/insert" method="post">
                                <input type="hidden" id="nameSeq" name="nameSeq" value="{{search.nameSeq}}" />
                                <table class="formTable mt10">
                                    <colgroup>
                                        <col width="5%" />
                                        <col width="*" />
                                    </colgroup>
                                    <tbody>
                                        <tr>
                                            <td>제목</td>
                                            <td>
                                                <input type="text" class="textType" id="title" name="title" placeholder="제목을 입력하세요" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>내용</td>
                                            <td>
                                                <textarea class="form-control" id="content" name="content" placeholder="내용을 입력하세요" rows="10"></textarea>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                            <div class="btnArea txtR">
                                <a href="javascript:void(0);" id="btn-save" class="btn btnBlue btnPopIns">등록</a>
                                <a href="javascript:void(0);" id="btn-cancel" class="btn btnDefalt">취소</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{>admin/layout/bodyFooter}}
    </div>

</body>
{{>admin/layout/footer}}
<script src="/js/adminBoard.js"></script>
<script>
    $(function () {
        board.write();
    });


</script>