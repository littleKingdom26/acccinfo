{{>admin/layout/header}}
<body>
<div id="loginWrap">
    <div class="container">

        <form id="loginForm" name="frm" method="post" action="">
        <div class="loginBody">
            <div class="box">
                <h3>Final Lap</h3>
                <div class="loginForm">
                    <hr class="sperator" />
                    <form action="/admin/login" method="post">
                        {{!--message--}}
                        <div class="loginInputWrap">
                            <ul class="loginBox">
                                <li>
                                    <span class="loginImg01">ID</span>
                                    <input type="text" id="txtId" name="id" class="textType" placeholder="아이디를 입력하세요." value="" />
                                </li>
                                <li>
                                    <span class="loginImg02">PW</span>
                                    <input type="password" id="txtPassword" name="password" class="textType" placeholder="비밀번호를 입력하세요." autocomplete="off" value="" />
                                </li>
                                <li>
                                    <span class="loginImg03">
                                        <input type="checkbox" id="remember-me"  name="remember-me" class="uniform"  />
                                    </span>
                                    <label for="remember-me">아이디 저장</label>
                                </li>
                            </ul>
                        </div>
                        <hr class="sperator" />
                        <div class="btnArea">
                            {{#error}}
                                {{error}}
                            {{/error}}
                            {{^error}}
                            {{/error}}
                            <button type="submit" id="btnLogin" class="btn btnBlue">LOGIN ADMIN</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </form>
    </div>
</div>
</body>

{{>admin/layout/footer}}
<script>
    $(function () {
        if(getParam("error") == "bad") {
            alert('비밀번호가 틀렸습니다.');
            return;
        }
    });

    function getParam(sname) {
        var params = location.search.substr(location.search.indexOf("?") + 1);
        var sval = "";
        params = params.split("&");
        for (var i = 0; i < params.length; i++) {
            temp = params[i].split("=");
            if([temp[0]] == sname) {
                sval = temp[1];
            }
        }
        return sval;
    }


</script>
