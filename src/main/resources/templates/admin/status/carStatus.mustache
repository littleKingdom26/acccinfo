{{>admin/layout/header}}
<body>
    <div id="wrap">
        <div class="inWrap">
            {{>admin/layout/lnb}}
            <div id="container">
                {{>admin/layout/topBar}}
                <div class="location">
                    <em class="home">HOME</em><i></i>
                    <em>통계</em><i></i>
                    <em class="active">트랙별 차량 선택수</em>
                </div>
                <div class="content">
                    <div class="box">
                        <div class="inBox">
                            <form id="searchFrm" action="/admin/status/carStatus" method="get">
                                <table class="formTable">
                                    <colgroup>
                                        <col width="150px" />
                                        <col width="100px" />
                                    </colgroup>
                                    <tbody>
                                        <tr>
                                            <th>트랙명 명</th>
                                            <td colspan="4">
                                                <select id="trackSeq" name="trackSeq">
                                                    <option value="">전체</option>
                                                    {{#trackList}}
                                                        <option value="{{seq}}" {{#selected}} selected="selected"{{/selected}}>{{#trackViewName}}{{trackViewName}}{{/trackViewName}}{{^trackViewName}}{{trackName}}{{/trackViewName}}</option>
                                                    {{/trackList}}
                                                </select>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="btnArea mt20">
                                    <a href="javascript:void(0)" id="btnSearch" class="btn btnBi btnBlue">검색</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="box">
                        <div class="inBox">
                            <table class="listTable mt10">
                                <colgroup>
                                    <col width="40%" />
                                    <col width="50%" />
                                    <col width="10%" />
                                </colgroup>
                                <thead>
                                <tr>
                                    <th>트랙명</th>
                                    <th>차량명</th>
                                    <th>건수</th>
                                </tr>
                                </thead>
                                <tbody >
                                {{#list}}
                                    <tr>
                                        <td>{{#trackViewName}}{{trackViewName}}{{/trackViewName}}{{^trackViewName}}{{trackName}}{{/trackViewName}}</td>
                                        <td>{{carName}}</td>
                                        <td>{{cnt}}</td>
                                    </tr>
                                {{/list}}
                                </tbody>
                            </table>
                            {{!--{data.page.paging}--}}
                        </div>
                    </div>
                </div>
            </div>
            {{>admin/layout/bodyFooter}}
        </div>
    </div>
</body>
{{>admin/layout/footer}}
<script src="/js/adminStatus.js"></script>
<script>
    $(function () {
        carStatus.init();
    });

//    $('#divLayer').target.bPopup();
</script>