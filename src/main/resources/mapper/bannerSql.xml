<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bannerSql">

    <insert id="saveBanner" parameterType="info.team23h.acc.vo.BannerVO">
        INSERT INTO TB_BANNER(
                              TITLE,
                              URL,
                              FILE_PATH,
                              USE_YN,
                              REG_DT
        )
        VALUES (
                  #{title},
                  #{url},
                  #{filePath},
                  #{useYn},
                  sysdate()
        )

    </insert>

    <select id="getBannerList" parameterType="info.team23h.acc.vo.BannerSearch" resultType="info.team23h.acc.vo.BannerVO">
        SELECT SEQ,TITLE,URL,FILE_PATH,USE_YN,REG_DT FROM TB_BANNER WHERE USE_YN = #{useYn}
    </select>
    
    <delete id="delBanner" parameterType="info.team23h.acc.vo.BannerVO">
        DELETE FROM TB_BANNER WHERE SEQ = #{seq}

    </delete>
</mapper>

